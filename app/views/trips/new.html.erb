<h1>New Trip</h1>


<%= form_with scope: :trip, url: trips_path, local: true do |form| %>
    <p>
      <%= form.label :start %><br>
      <%= form.text_field :start %>
    </p>
   
    <p>
      <%= form.label :end %><br>
      <%= form.text_field :end %>
    </p>

    <p>
    <%= form.label :miles %><br>
    <%= form.number_field :miles %>
  </p>
   
    <p>
      <%= form.submit %>
    </p>
<% end %>

<%= link_to 'Back', trips_path %>